<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Gallery" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="ActivityTransitions" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_back</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_forward</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.AppStartLoadTranslucent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/image_launcher</item>
    </style>

    <style name="Widget.Blocks5.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Blocks5.EditText.Light"/>

    <style name="Widget.Blocks5.EditText.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Divider_Horizontal_Gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="Widget.Blocks5.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.Blocks5.Button.Solid.Blue" parent="Widget.Blocks5.Button">
         <item name="android:textColor">@color/white</item>
         <item name="android:background">#00B3FD</item>
    </style>

    <style name="Widget.Blocks5.Button.Solid.Red" parent="Widget.Blocks5.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_solid_light</item>
    </style>

    <style name="Widget.Blocks5.Button.Hollow.Dark" parent="Widget.Blocks5.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_dark</item>
    </style>

    <style name="Widget.Blocks5.Button.Hollow.Light" parent="Widget.Blocks5.Button">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/bg_btn_light</item>
    </style>

    <style name="album_AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="album_PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- MatchParent -->

    <style name="album_MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent -->

    <style name="album_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="album_WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="album_Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/album_White</item>
        <item name="subtitleTextColor">@color/album_White</item>
        <item name="theme">@style/album_ToolbarTheme</item>
    </style>

    <style name="album_ToolbarTheme">
        <item name="actionMenuTextColor">@color/album_White</item>
    </style>

    <style name="album_Toolbar.PopupTheme">
        <item name="popupTheme">@style/album_PopupOverlay</item>
    </style>

    <!-- CheckBox -->

    <style name="album_CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox"/>

    <style name="album_CheckBox.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="album_DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="album_DialogStyle.Folder">
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Button -->
    <style name="album_ButtonText" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TRM_ANIM_STYLE">
        <item name="android:windowEnterAnimation">@anim/trm_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_popup_exit</item>
    </style>

    <!-- 底部对话框 -->
    <style name="BottomDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- 底部对话框动画 -->
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_slide_down</item>
    </style>

    <style name="radio_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dip</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_radio_button_3</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/select_color_white</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_timestamp_bg</item>
    </style>

    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation">@dimen/top_sheet_modal_elevation</item>
        <item name="behavior_peekHeight">@dimen/top_sheet_modal_peek_height</item>
        <item name="behavior_hideable">true</item>
    </style>

</resources>
