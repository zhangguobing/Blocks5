<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:tr_pureScrollMode_on="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@color/red"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:checked="true"
                    android:text="正在定位..."/>

                <TextView
                    android:id="@+id/tv_other_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button_3"
                    android:textColor="@color/select_color_white"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:text="其他地区"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排列顺序"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/primary_text"/>

            <com.bing.blocks5.widget.FlowRadioGroup
                android:id="@+id/rg_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:radio_columu_num="3">

                <com.bing.blocks5.widget.FlowRadioButton
                    android:id="@+id/rb_newest_time"
                    style="@style/radio_item"
                    android:checked="true"
                    android:text="按最新时间"/>

                <com.bing.blocks5.widget.FlowRadioButton
                    android:id="@+id/rb_credit_level"
                    style="@style/radio_item"
                    android:text="按信用程度"/>

            </com.bing.blocks5.widget.FlowRadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动性质"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/primary_text"/>


            <com.bing.blocks5.widget.FlowRadioGroup
                android:id="@+id/rg_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:radio_columu_num="3">

                <com.bing.blocks5.widget.FlowRadioButton
                    android:id="@+id/rb_concentration"
                    style="@style/radio_item"
                    android:checked="true"
                    android:text="召集中"/>

                <com.bing.blocks5.widget.FlowRadioButton
                    android:id="@+id/rb_full_sign_up"
                    style="@style/radio_item"
                    android:text="已报满"/>

            </com.bing.blocks5.widget.FlowRadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动区域"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/primary_text"/>


            <com.bing.blocks5.widget.FlowRadioGroup
                android:id="@+id/rg_activity_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:radio_columu_num="3">

                <com.bing.blocks5.widget.FlowRadioButton
                    android:id="@+id/tb_all_area"
                    style="@style/radio_item"
                    android:checked="true"
                    android:text="所有地区"/>

            </com.bing.blocks5.widget.FlowRadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动时间"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/primary_text"/>


            <com.bing.blocks5.widget.FlowRadioGroup
                android:id="@+id/rg_activity_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:radio_columu_num="3">

                <com.bing.blocks5.widget.FlowRadioButton
                    android:id="@+id/rb_in_one_week"
                    style="@style/radio_item"
                    android:checked="true"
                    android:text="一周内"/>

            </com.bing.blocks5.widget.FlowRadioGroup>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="确定"
                style="@style/Widget.Blocks5.Button.Solid.Red" />
        </LinearLayout>

    </ScrollView>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

